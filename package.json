{
  "name": "alphabet-invasion",
  "version": "1.0.0",
  "description": "Alphabet invasion game from RXJS tutorial",
  "main": "index.js",
  "repository": "https://github.com/superelement/alphabet-invasion.git",
  "author": "Jim <jimdoyle82@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^4.1.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "open-cli": "^5.0.0",
    "reload": "^3.0.1",
    "rxjs": "6.4.*",
    "typescript": "^3.5.3",
    "watch": "^1.0.2"
  },
  "scripts": {
    "start": "concurrently \"npm run server-reload\" \"npm run watch-ts\" \"open http://localhost:8000\"",
    "server-reload": "reload --dir ./public --watch-dir ./public --port 8000",
    "compile-ts": "node_modules/typescript/bin/tsc src/index.ts --outFile public/index.js",
    "watch-ts": "watch \"npm run compile-ts\" src"
  }
}
